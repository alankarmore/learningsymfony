{% extends '::base.html.twig' %}

{% block body -%}
<h1>Blog</h1>
<div class="container">			
    <!-- Features -->			
    <div class="row">									
        <section class="8u">				
            <!-- Banner -->								
            <div id="banner">
                <a href="#"><img src="images/banner.jpg" alt="banner image" /></a>
            </div>
            <h1>{{ entity.blogTitle }}</h1>
            <p>{{ entity.description }}</p>
            <p>Added On: {{ entity.addedOn|date('d M,Y') }}</p>
        </section>
    </div>
</div>
<div class="container">
    <ul>
        <li><a href="{{ path('blog') }}">Back to the list</a></li>
        <li><a href="{{ path('blog_edit', { 'id': entity.id }) }}">Edit</a></li>
    </ul>	            
    <ul class="record_actions"><li>{{ form(delete_form) }}</li></ul>
</div>
{% endblock %}
